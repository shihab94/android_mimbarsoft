<?xml version="1.0" encoding="utf-8"?>


            <!-- created a custom layout for showing facebook,twitter icon on men
                 but it didn't work -->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/image_button_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_nav_facebook" />
    <ImageButton
        android:id="@+id/image_button_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_nav_twitter"
        android:onClick="onClickTwitter" />
    <ImageButton
        android:id="@+id/image_button_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_nav_google"
        android:onClick="onClickGoogle" />
</LinearLayout>